@import "../icon-fonts/icon-fonts.styl"

.accordion
	&_filter
		position relative
		cf()

	&__item
		padding 15px 0
		list-style none
		.card &
			border-bottom 1px solid #9e9d9b
		.subMenu-mobile &
			padding: 20px 0
			display: flex;
			flex-direction: column;
			align-items: center;
		.accordion_filter &
			margin 0
			padding-left 15px
			display table-cell
			width 1%
			border none

			+mobile()
				display block
				width 100%
				padding 0
				margin 10px 0
			&:first-child
				padding 0
				
		&
		&_active
			~/_filter &
				border-radius 3px 3px 0 0
			
	&__title,
	&__title-chat
		display: inline-flex
		align-items: center
		justify-content: space-between
		width: 100%
		font-size: 10px
		text-transform: uppercase
		letter-spacing: 3px
		.card &
			&:after
				color $gray_arrow
				font-size: 10px
				@extend .icon-fonts:before
				@extend .icon-down:before
		.subMenu-mobile &
			justify-content: center
			font-size: 16px
			line-height: 22px
		&.special
			color #D5A48C
			
	
	&__header
		position relative
		display block
		font-family $PTSans
		color #211f21
		font-size 18px
		line-height 1
		padding 11px 50px 11px 20px
		background-color transparent
		cursor pointer

		~/__item_active &
			~/_filter &
				border-radius 3px 3px 0 0

		&:after
			position: absolute;
			top: 6px;
			right: 20px;
			font-size: 26px;
			color #9e9d9b


		.accordion_filter &
			background #778899
			border-radius 5px
			padding 12px 35px 12px 15px
			color #ffffff

			+desktop()
				padding-right 40px

			+tablet()
				padding-right 40px

			&:after
				top 50%
				right 10px
				margin-top -12px
				color #fff

	&__submenu
		display none
		.subMenu-mobile &
			padding-top 32px
			flex-direction: column
			align-items: center
			
		.accordion_filter &
			background #fff
			position absolute
			top 100%
			left 0
			width 100%
			z-index 1
			padding 30px 25px

			+mobile()
				position static
				padding 15px
		.card__accordion &
			flex-direction: column
			align-items: start 
			padding-y(24px)
			
		.section__text_normal
			margin-top: 0


	&__content-list
		column-count 4

	&__item_active &__header
		background #fff
		color #211f21


	
	&__item_active &__title:after
		transform rotate(180deg)
		
		
	:hover
		cursor: pointer
