.container
	display: flex
	height: 100%
	width 100%
	.container &
		padding-right 0
		padding-left 0
	&_full
		width: 100vw
	&_flex-reverse
		flex-direction row-reverse
	&_row
		flex-direction row
		flex-wrap wrap
	&_col
		flex-direction: column
	&_centered
		text-align: center
		justify-content: center
		align-items: center
	&__aside
		width 375px
		border-right: 1px solid #999
		border-left: 1px solid #999
		padding-right 0
		padding-left 0
		+ie9()
			float left
		+below(1199px)
			width 260px
			height 100%

	&_slider
		display: block
		text-align: center
	&_form
		width: 402px
		max-width 100vw
		+mobile()
			width: 240px
		+below(402px)
			max-width 100vw
			margin: 0 auto
	
	&__content
		width calc(100% - 375px)
		padding: 0 70px
		+below(1200px)
			width: 100%
		+desktop()
			padding: 0 50px

		+tablet()
			padding: 0 30px

		+mobile()
			padding: 0 15px
	&__wide
		margin: 0 -70px
		+desktop()
			margin: 0 -50px
		+tablet()
			margin: 0 -30px
		+mobile()
			margin: 0 -15px


	&_big
		width: 100%
		max-width: 1240px
		margin 0 auto
		+desktop()
			max-width: 970px

		+tablet()
			max-width: 768px

		+below(810px)
			max-width: 100vw
			.ie &
				max-width: 100%
		&.mobile-padding
			+below(810px)
				padding-x(20px)
	

	&_middle
		width: 100%
		max-width: 1200px
		flex-grow: 1;
		margin: 0;
		+desktop()
			max-width: 970px

		+tablet()
			max-width: 768px

		+mobile()
			max-width: 100%
			margin-x(20px)
	&_small
		width: 100%
		margin: 0 auto
		max-width 820px
		+mobile()
			max-width: 100%
			//margin-x(20px)
	&__submenu
		width: 100%
		margin: 0 auto
		max-width 220px
	
	&__title
		&_news
			text-align left
			font-size: 22px
			line-height: 26px




