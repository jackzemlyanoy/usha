@import "../icon-fonts/icon-fonts.styl"
.banner
	position relative
	margin 0 auto
	display flex
	flex-direction: column
	width 100%
	align-items center
	&_centered
		.banner__wrapper
			max-width 640px
			margin: 0 auto
			top: 50%
			transform: translateY(-50%)!important
	&__wrapper
		z-index 3
		position: absolute;
		display flex
		flex-direction: column
		justify-content: space-between
		align-items center
		top: 56px
		bottom: 59px
		right: 0
		left: 0
		color: white
		.banner_main &
			bottom 150px
			+mobile()
				bottom: 150px
				top: auto
		.banner_collection &
			bottom 101px
			
		.btn
			margin-top: 35px
			+mobile()
				margin-top: 30px

	&__icon
		margin-bottom: 24px

	&__img
		z-index 2
		width 100%
		max-height 100%
		display block
		background-repeat no-repeat
		background-position center
		background-size cover
		&-src
			display: block
			width 100%
			height: 100%
			object-fit: cover;
			margin: 0 auto;
		.banner_main &
			height: 100vh
		+below(992px)
			height: 100vh
	&__img_desktop
		+mobile()
			display none

	&__img_mobile
		display none

		+mobile()
			display block

	&__title
		text-transform: uppercase
		color white
		font-size: 32px
		font-weight: bold
		line-height: 44px
		margin-top: auto
		max-width: 400px
		text-align: center
		letter-spacing 3px
		padding: 15px
		&-main
			margin-top: 0
			margin-bottom: 70px
			display: inline-block
			text-align: center
			font-size: 8rem
			font-weight: bold
			line-height: 100px
			text-shadow: 0 0 12px #000000;
			+hd()
				margin-bottom: 90px
				font-size: 10rem
				line-height: 130px

			+desktop()
				font-size: 6rem
				line-height: 80px

			+below(993px)
				font-size: 5rem
				line-height: 65px
		.banner_cabinet &
			margin-top: 12.5%
			
		.banner_collection &,
		.banner_main &
			display: flex;
			max-width: 620px;
			font-size: 36px
			line-height: 56px
			letter-spacing 10px
			
			+desktop()
				font-size: 32px
				line-height: 48px
				letter-spacing: 7px
			
			+below(993px)
				font-size: 30px
				line-height: 42px
		
			+mobile()
				font-size: 28px
				line-height: 38px
				letter-spacing: 5px
		
			

		+below(993px)
			font-size 1.75rem
			line-height: 28px
		
	&__supertitle
		font-size: 18px;
		line-height: 20px;
		margin-top: auto
		max-width: 400px
		text-transform: uppercase
		letter-spacing: 3px
		margin-bottom: 15px
		+mobile()
			font-size: 12px
			line-height: 16px
		+ .banner__title
			margin-top: initial
	
	&__text
		font-size: 1rem
		font-weight: 500
		margin-bottom 12px
		display block
		line-height 24px
		text-align center
		text-shadow: 0 0 12px #000000;
		+desktop()
			margin-bottom 8px

		+tablet()
			margin-bottom 5px

		+mobile()
			margin-bottom 15px
		&_supertitle
			margin: 0
			font-size: 48px
			font-weight: bold
			line-height: 56px
		&_subtitle
			text-align: center
			font-size: 16px
			line-height: 24px
			&-main
				font-size: 18px
				line-height: 28px


	&__btn
		margin-top 50px
		text-shadow: 0 0 12px #000000;

		+desktop()
			margin-top 40px

		+tablet()
			margin-top 30px

		+mobile()
			margin-top 15px
		
		
	//modify
	&__lookbook
		color: white
		display: flex
		align-items: center
		margin-bottom: auto
		font-size: 14px
		font-weight: 100
		line-height: 19px
		text-transform: uppercase
		letter-spacing 3px
		cursor pointer
		&:hover
			opacity: 0.5
		