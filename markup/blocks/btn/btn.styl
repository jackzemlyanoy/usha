@import "../icon-fonts/icon-fonts.styl"

.btn
	padding 7px 12px
	font-weight: bold;
	font-size: 12px
	display inline-flex
	align-items center
	text-decoration none
	transition all .3s ease-out
	&:hover
		cursor pointer
		opacity 0.5
		.btn__text_arrow:after
			color black
			transform translateX(4px)
		//.btn__icon
		//	color $gray_socials - 20%
	&:active
		opacity: 0.8
	
	+below(991px)
		font-size .75rem
	
	&_social
		padding: 0
		display inline-flex
		justify-content: center
		align-items: center
		.footer &
			width: 26px
			height: 26px
	&_big
		padding-y(12px)
		.card &
			padding-y(17px)
	
	&__text
		font-size: 12px
		font-weight: lighter
		line-height: 16px
		letter-spacing 3px
		text-align: center
		white-space nowrap
		text-transform: uppercase
		&_arrow
			text-align: initial
			display: flex;
			justify-content: space-between
			align-items: center
			width: 100%
			&:after
				display inline-flex
				margin-left: 18px
				transition all .3s ease-out
				font-size: 12px
				color: white
				@extend .icon-fonts:before
				@extend .icon-right:before
		.btn_transparent &
			font-size: 14px
			line-height: 19px
			
	&__icon
		color $gray_socials
		font-size: 26px
		display: inline-flex
		align-items: center
		justify-content: center
		transition all .3s
		&_vk
			font-size: 26px
			&:before
				@extend .icon-fonts:before
				@extend .icon-vk:before
		
		&_instagram
			
			&:before
				@extend .icon-fonts:before
				@extend .icon-instagram:before
		
		&_facebook
			
			&:before
				transition all .3s
				@extend .icon-fonts:before
				@extend .icon-facebook:before
		&_cart
			
			&:before
				transition all .3s
				@extend .icon-fonts:before
				@extend .icon-cart:before
	
	&__svg
		display block
		fill $white
	
	&_width-100
		display block
		width 100%
	
	&_white
		background $white
		color black
		&:hover
			background $magenta
			color white
	&_brown
		background $brown
		color white
		//&:hover
		//	opacity 0.5
	
	&_gray
		background $gray_white
		color black
		//&:hover
		//	background $gray_white + 20%
		
		&.btn_active
			background black
			border: 2px solid $gray_6
			color white
			//&:hover
			//	background black + 10%
			//	border-color $gray_6 + 20%
	
	&_black
		background black
		border-color black
		color white
		//&:hover
		//	background black + 20%
		//	border-color black + 20%
	
	&_banner
		color: white
		&:after
			background white
	
	&_transparent
		padding-x(0)
		background-color transparent
		color: inherit
	
	&_underline
		position: relative
		&:after
			color inherit
			position: absolute
			content: ''
			height: .8px
			left 0
			bottom 0
			width: 100%;
			transition all .2s linear
			.header_scrolled &,
			.section__wrapper &
				background: $colorText
		&:hover
			opacity 0.5
		
		&:active
			opacity: 0.8
		
		.banner &
			&:after
				background white
		
		.banner_main &
			&:after
				transform rotate(-0.6deg)
			&:hover
				&:after
					transform rotate(0)
					
	//стили для кнопки формы
	&_submit
		&-mail
			padding: 22.5px 24px

@keyframes shake {
	0%, 20%, 40%, 60%, 80%, 100% {
		transform: rotate(0);
	}
	10%, 30%, 50%, 70%, 90% {
		transform: rotate(3deg);
	}
}

@keyframes fly {
	0% {
		transform: translate3d(0, 0, 0);
	}
	100% {
		transform: translate3d(90px, 0, 0);
	}
}

@keyframes flyBack {
	0% {
		transform: translate3d(0, 0, 0);
	}
	100% {
		transform: translate3d(-90px, 0, 0);
	}
}




